# Ghostty Configuration

# Font Configuration
font-family = UDEV Gothic 35NF
font-size = 16
# Disable all ligatures and stylistic alternates
font-feature = -liga
font-feature = -calt
font-feature = -dlig
font-feature = -hlig
font-feature = -ss01
font-feature = -ss02
font-feature = -ss03
font-feature = -salt

# Cursor
cursor-style = block

# Keybindings
# Claude Code: Shift+Enter for newline (Enter sends command)
keybind = shift+enter=text:\n

# IME and Text Rendering Settings
macos-auto-secure-input = false

# Text rendering options
auto-update = off

# Ensure Shift-click escapes app mouse reporting (tmux, neovim, etc.)
mouse-shift-capture = never

# Font thickness adjustment for better readability (macOS)
font-thicken = true
font-thicken-strength = 1

# Window appearance settings
background-opacity = 1
window-padding-x = 10
window-padding-y = 10

# Shell integration for enhanced features
shell-integration = detect
shell-integration-features = cursor,sudo,title,ssh-env,ssh-terminfo

# Scrollback history
scrollback-limit = 100000

# Additional keybindings
keybind = cmd+enter=ignore
keybind = super+u=copy_url_to_clipboard
keybind = super+backquote=toggle_quick_terminal

# Enable clickable links
link-url = true
link-previews = true

# Make Option act as Alt (Meta) on macOS (left Option only)
macos-option-as-alt = left

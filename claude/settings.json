{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "MAX_THINKING_TOKENS": "30000",
    "BASH_DEFAULT_TIMEOUT_MS": "900000",
    "BASH_MAX_TIMEOUT_MS": "1800000",
    "MCP_TOOL_TIMEOUT": "1800000",
    "MCP_TIMEOUT": "1800000",
    "BASH_MAX_OUTPUT_LENGTH": "80000",
    "MAX_MCP_OUTPUT_TOKENS": "80000",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "false",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "DISABLE_TELEMETRY": "true",
    "DISABLE_MICROCOMPACT": "true"
  },
  "permissions": {
    "allow": [
      "WebFetch(domain:www.figma.com)",
      "Bash(npm install:*)"
    ],
    "deny": [],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Edit|Write|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pretool_guard.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop_prompt.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline",
    "padding": 0
  },
  "enabledPlugins": {
    "security-guidance@claude-code-plugins": false,
    "code-review@claude-code-plugins": false,
    "commit-commands@claude-code-plugins": false,
    "explanatory-output-style@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": false,
    "plugin-dev@claude-code-plugins": false,
    "pr-review-toolkit@claude-code-plugins": false,
    "reviw-plugin@reviw-marketplace": true,
    "linear@claude-plugins-official": true,
    "firebase@claude-plugins-official": true,
    "frontend-design@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754086762195
  }
}

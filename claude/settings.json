{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "MAX_THINKING_TOKENS": "30000",
    "BASH_DEFAULT_TIMEOUT_MS": "900000",
    "BASH_MAX_TIMEOUT_MS": "1800000",
    "MCP_TOOL_TIMEOUT": "1800000",
    "MCP_TIMEOUT": "1800000",
    "BASH_MAX_OUTPUT_LENGTH": "80000",
    "MAX_MCP_OUTPUT_TOKENS": "80000",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "80000",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "false",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "DISABLE_TELEMETRY": "true",
    "DISABLE_MICROCOMPACT": "true"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Update|Write|MultiEdit|mcp__obsidian__obsidian_write_note|mcp__serena__replace_regex",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/textlint-check.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/hook_pre_commands.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-send-notification.js"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/hook_stop_words.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754086762195
  },
  "model": "sonnet"
}
{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "MAX_THINKING_TOKENS": "30000",
    "BASH_DEFAULT_TIMEOUT_MS": "900000",
    "BASH_MAX_TIMEOUT_MS": "1800000",
    "MCP_TOOL_TIMEOUT": "1800000",
    "MCP_TIMEOUT": "1800000",
    "BASH_MAX_OUTPUT_LENGTH": "80000",
    "MAX_MCP_OUTPUT_TOKENS": "80000",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "80000",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "false",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "DISABLE_TELEMETRY": "true",
    "DISABLE_MICROCOMPACT": "true"
  },
  "permissions": {
    "allow": [
      "WebFetch(domain:www.figma.com)",
      "Bash(npm install:*)"
    ],
    "deny": [],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|Edit|Write|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pretool_guard.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "タスク完了報告を行ってください。以下の手順で実行:\n1. tmux display-message -p -t \"$TMUX_PANE\" '#I' でウィンドウIDを取得\n2. 今回のタスク内容を30文字以内で要約\n3. say -r 230 \"Window <ID> <要約>\" をバックグラウンドで実行\n4. ~/.claude/skills/reporting-and-tmux/rename_tmux_window.sh \"<漢字+絵文字>\" を実行"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline",
    "padding": 0
  },
  "enabledPlugins": {
    "security-guidance@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "commit-commands@claude-code-plugins": true,
    "explanatory-output-style@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "frontend-design@claude-code-plugins": true,
    "hookify@claude-code-plugins": true,
    "learning-output-style@claude-code-plugins": true,
    "plugin-dev@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754086762195
  }
}
